<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

      <template id="sale_order_report_conekta_oxxo" inherit_id="sale.report_saleorder_document">
        
        <xpath expr="//div[@class='col-xs-5 col-xs-offset-1']" position="inside">

          <t t-if="doc.payment_tx_id.conekta_oxxo_reference">

            <strong>REFERENCIA</strong>
            <img class="img img-responsive" src="/payment_conekta_oxxo/static/src/img/conekta_oxxo_icon.png" />
            <!-- <img t-att-src="'data:image/png;base64,/payment_conekta_oxxo/static/src/img/conekta_oxxo_icon.png'"/> -->

            <div class="alert alert-success" role="alert">
              <h1><span t-field="doc.payment_tx_id.conekta_oxxo_reference" /></h1>
            </div>

            <p t-if="doc.payment_tx_id.conekta_oxxo_expire_date">
              Este codigo es valido hasta: <t t-esc="doc.payment_tx_id.conekta_oxxo_expire_date"/>
            </p>

          </t>

        </xpath>
          
      </template>

    </data>
</odoo>
